{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@services/*": ["src/services/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*",    
    "src/**/*.d.ts",
    "src/types/*.d.ts", // Adding a changed express file for middleware authentication of the user
    "src/types/**/*.d.ts" // Adding a changed express file for middleware authentication of the user
  ],
  "exclude": ["node_modules"]
}